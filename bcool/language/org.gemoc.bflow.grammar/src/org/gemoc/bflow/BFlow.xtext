grammar org.gemoc.bflow.BFlow with org.eclipse.xtext.common.Terminals

generate bFlow "http://www.gemoc.org/bflow/BFlow"

import "http://org.gemoc.bcool.model/"

Model:
	'BCOoLFlow' name=ID '{'
		'import' importURI = STRING ';'
		'BCOoL Specification:' bcoolspec=[BCoolSpecification] ';'
		'Output:' outputtimemodel=STRING ';'
		 models+=modelinput*
		 'Flow' bcoolflow+= Flows*
		 
		 'end Flow;'
	'}';

modelinput:
	'Model' name=ID '(' timemodel=STRING ',' modeluri=STRING ')' ';'
;


// TODO: change the ID for a BCOoLoPERATOR
Flows:
	'applies' oper=[BCoolCompositionRule] 'between' '('(params+=[modelinput](',' params+=[modelinput])*)? ')' ';';
